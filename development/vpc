AWSTemplateFormatVersion: 2010-09-09
Description: VPC for Pronto Upgrade
Parameters:
  VPC1Name:
    Description: Name of the VPC
    Type: String
    Default: Pronto Dev VPC
    MinLength: '1'
    MaxLength: '64'
    AllowedPattern: '[-_ a-zA-Z0-9]*'
    ConstraintDescription: 'can contain only alphanumeric characters, spaces, dashes and underscores.'
  VPC2Name:
    Description: Name of the VPC
    Type: String
    Default: Pronto Prod VPC
    MinLength: '1'
    MaxLength: '64'
    AllowedPattern: '[-_ a-zA-Z0-9]*'
    ConstraintDescription: 'can contain only alphanumeric characters, spaces, dashes and underscores.'
  VPC1CIDRBlock:
    Description: CIDR block (subnet) for the VPC (eg 10.48.XX.0/YY)
    Type: String
    Default: 10.48.160.0/26
    MinLength: '9'
    MaxLength: '19'
    ConstraintDescription: must be a valid CIDR block (subnet).
  VPC2CIDRBlock:
    Description: CIDR block (subnet) for the VPC (eg 10.48.XX.0/YY)
    Type: String
    Default: 10.48.160.64/26
    MinLength: '9'
    MaxLength: '19'
    ConstraintDescription: must be a valid CIDR block (subnet).
Resources:
  VPC1:
    Type: 'AWS::EC2::VPC'
    Properties:
      CidrBlock: !Ref VPC1CIDRBlock
      EnableDnsSupport: 'true'
      EnableDnsHostnames: 'true'
      InstanceTenancy: default
      Tags:
        - Key: Name
          Value: !Join ['', [!Ref "AWS::StackName", "-VPC1" ]]
  VPC2:
    Type: 'AWS::EC2::VPC'
    Properties:
      CidrBlock: !Ref VPC2CIDRBlock
      EnableDnsSupport: 'true'
      EnableDnsHostnames: 'true'
      InstanceTenancy: default
      Tags:
        - Key: Name
          Value: !Join ['', [!Ref "AWS::StackName", "-VPC2" ]]

  InternetGateway1:
    Type: 'AWS::EC2::InternetGateway'
    Properties:
      Tags:
        - Key: Name
          Value: !Join
            - '-'
            - - !Ref VPC1Name
              - Internet Gateway
  InternetGateway2:
    Type: 'AWS::EC2::InternetGateway'
    Properties:
      Tags:
        - Key: Name
          Value: !Join
            - '-'
            - - !Ref VPC2Name
              - Internet Gateway
  AttachGateway1:
    Type: 'AWS::EC2::VPCGatewayAttachment'
    Properties:
      VpcId: !Ref VPC1
      InternetGatewayId: !Ref InternetGateway1
  AttachGateway2:
    Type: 'AWS::EC2::VPCGatewayAttachment'
    Properties:
      VpcId: !Ref VPC2
      InternetGatewayId: !Ref InternetGateway2

Outputs:
  VPC1:
    Description: VPC1 Details
    Value: !Ref VPC1
    Export:
      Name: !Sub '${AWS::StackName}-VPC1'
  VPC2:
    Description: VPC2 Details
    Value: !Ref VPC2
    Export:
      Name: !Sub '${AWS::StackName}-VPC2'
  InternetGateway1:
    Description: Internet Gateway (IGW) Id
    Value: !Ref InternetGateway1

  InternetGateway2:
    Description: Internet Gateway (IGW) Id
    Value: !Ref InternetGateway2


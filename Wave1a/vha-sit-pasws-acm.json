{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "PASWS ACM Stack",
    "Parameters": {
        "EnvName": {
            "Type": "String",
            "Description": "Application environment",
            "Default": "sit",
            "AllowedValues": [
                "prod",
                "pt",
                "sit"
            ],
            "ConstraintDescription": "Allowed values are prod, pt, sit."
        }
    },
    "Resources": {
        "ACMCertificate": {
            "Type": "AWS::CertificateManager::Certificate",
            "Properties": {
                "DomainName": "mnp-pasws-sit1.vodafone.com.au",
                "DomainValidationOptions": [
                    {
                        "DomainName": "mnp-pasws-sit1.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "mnp-pasws-sit1.dc.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "api.sit1.npe.pasws.aws.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "mnp-pasws-sit2.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "mnp-pasws-sit2.dc.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "api.sit2.npe.pasws.aws.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "mnp-pasws-sit3.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "mnp-pasws-sit3.dc.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    },
                    {
                        "DomainName": "api.sit3.npe.pasws.aws.vodafone.com.au",
                        "ValidationDomain": "vodafone.com.au"
                    }
                ],
                "SubjectAlternativeNames": [
                    "mnp-pasws-sit1.vodafone.com.au",
                    "mnp-pasws-sit1.dc.vodafone.com.au",
                    "api.sit1.npe.pasws.aws.vodafone.com.au",
                    "mnp-pasws-sit2.vodafone.com.au",
                    "mnp-pasws-sit2.dc.vodafone.com.au",
                    "api.sit2.npe.pasws.aws.vodafone.com.au",
                    "mnp-pasws-sit3.vodafone.com.au",
                    "mnp-pasws-sit3.dc.vodafone.com.au",
                    "api.sit3.npe.pasws.aws.vodafone.com.au"
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    "tpgt",
                                    {
                                        "Ref": "EnvName"
                                    },
                                    "pasws",
                                    "cert"
                                ]
                            ]
                        }
                    }
                ],
                "ValidationMethod": "EMAIL"
            }
        }
    }
}